    <script>
        // Función principal para calcular y mostrar la puntuación
        function calculateScore() {
            const checkboxes = document.querySelectorAll('#mmse-form input[type="checkbox"]:checked');
            let totalScore = 0;

            checkboxes.forEach(checkbox => {
                // Suma el valor del atributo data-score, asegurándose de que sea un número
                totalScore += parseInt(checkbox.getAttribute('data-score') || '0', 10);
            });

            // Actualiza la UI
            document.getElementById('total-score').textContent = totalScore;
            interpretScore(totalScore);
        }

        // Función para interpretar el resultado
        function interpretScore(score) {
            const interpretationText = document.getElementById('interpretation-text');
            const interpretationDetail = document.getElementById('interpretation-detail');
            const scoreBox = document.querySelector('.score-box:nth-child(2)'); // El contenedor de la interpretación

            let text = "";
            let detail = "";
            let colorClass = "text-gray-700";
            let bgClass = "bg-gray-100";

            if (score >= 27) {
                text = "Normal (Sin Deterioro)";
                detail = "El rendimiento cognitivo está dentro de los límites esperados.";
                colorClass = "text-green-700";
                bgClass = "bg-green-100";
            } else if (score >= 21) {
                text = "Deterioro Cognitivo Leve (DCL)";
                detail = "Sugiere un posible deterioro cognitivo leve. Se recomienda una evaluación más profunda.";
                colorClass = "text-yellow-700";
                bgClass = "bg-yellow-100";
            } else if (score >= 11) {
                text = "Deterioro Cognitivo Moderado";
                detail = "El deterioro es significativo. Es necesaria una evaluación neuropsicológica completa y seguimiento.";
                colorClass = "text-orange-700";
                bgClass = "bg-orange-100";
            } else if (score >= 0) {
                text = "Deterioro Cognitivo Severo";
                detail = "El deterioro es grave. Requiere intervención y manejo inmediato.";
                colorClass = "text-red-700";
                bgClass = "bg-red-100";
            }
            
            // Aplicar clases de color y texto
            interpretationText.textContent = text;
            interpretationDetail.textContent = detail;

            // Resetear clases de color y aplicar las nuevas
            scoreBox.classList.remove('bg-gray-100', 'bg-green-100', 'bg-yellow-100', 'bg-orange-100', 'bg-red-100');
            scoreBox.classList.add(bgClass);

            interpretationText.classList.remove('text-gray-700', 'text-green-700', 'text-yellow-700', 'text-orange-700', 'text-red-700');
            interpretationText.classList.add(colorClass);
        }

        // Inicializar la aplicación al cargar
        document.addEventListener('DOMContentLoaded', calculateScore);
    </script>
</body>
</html>
